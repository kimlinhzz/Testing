<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <android.support.v7.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardBackgroundColor="#fff"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/profile"

                    />

                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profile"
                    android:layout_marginTop="10dp"
                    android:text="Jonney"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile"
                    android:layout_centerVertical="true"
                    android:text="......."
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:background="#ccc"
                 android:layout_alignParentBottom="true"
                />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment_black_24dp"
                    android:layout_alignParentBottom="true"
                     android:layout_margin="10dp"
                    android:id="@+id/comment"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share_black_24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/comment"
                    android:layout_margin="10dp"
                    android:id="@+id/share"
                    /> <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_report_black_24dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/share"
                android:id="@+id/report"
                />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardBackgroundColor="#fff"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"

            >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/profile2"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_margin="5dp"
                   android:src="@drawable/profile2"

                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@id/profile2"
                   android:layout_marginTop="10dp"
                   android:text="john"
                   android:textColor="#000000" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/profile2"
                   android:layout_centerVertical="true"
                   android:text="Hello"
                   android:textColor="#000000"
                   android:layout_margin="10dp"
                   />


               <View
                   android:id="@+id/view2"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_gravity="bottom"
                   android:background="#ccc"
                   android:layout_alignParentBottom="true"
                   />
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_comment_black_24dp"
                   android:layout_alignParentBottom="true"
                   android:layout_margin="10dp"
                   android:id="@+id/comment2"
                   />
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_share_black_24dp"
                   android:layout_alignParentBottom="true"
                   android:layout_toRightOf="@id/comment2"
                   android:layout_margin="10dp"
                   android:id="@+id/share2"
                   /> <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_report_black_24dp"
               android:layout_alignParentBottom="true"
               android:layout_margin="10dp"
               android:layout_toRightOf="@id/share2"
               android:id="@+id/report2"
               />



           </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cardview3"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardBackgroundColor="#fff"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <de.hdodenhof.circleimageview.CircleImageView
                  android:id="@+id/profile3"
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:layout_margin="5dp"
                  android:src="@drawable/profile"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/profile3"
                  android:layout_marginTop="10dp"
                  android:text="Jonney"
                  android:textColor="#000000" />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/profile3"
                  android:layout_centerVertical="true"
                  android:text=".......Heeee....."
                  android:textColor="#000000"
                  android:layout_margin="10dp"
                  />


              <View
                  android:id="@+id/view3"
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:layout_gravity="bottom"
                  android:background="#ccc"
                  android:layout_alignParentBottom="true"
                  />
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_comment_black_24dp"
                  android:layout_alignParentBottom="true"
                  android:layout_margin="10dp"
                  android:id="@+id/comment3"
                  />
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_share_black_24dp"
                  android:layout_alignParentBottom="true"
                  android:layout_toRightOf="@id/comment3"
                  android:layout_margin="10dp"
                  android:id="@+id/share3"
                  /> <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_report_black_24dp"
              android:layout_alignParentBottom="true"
              android:layout_margin="10dp"
              android:layout_toRightOf="@id/share3"
              android:id="@+id/report3"
              />

          </RelativeLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</LinearLayout>